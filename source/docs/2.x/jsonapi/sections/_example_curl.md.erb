```shell
curl -w 'response: %{http_code} \n' -X <%= method_type.to_s.upcase -%> \
-H "Content-type: application/vnd.api+json; ext=bulk" -d \
<%
res = resource_linked_type || resource_type
singular_req = !(path =~ /\{#{resource_type}_id\}$/).nil?
ext = if singular_req
  "#{path.sub(/\{#{resource_type}_id\}/, uuid_1)}"
else
  path
end

case method_type
when :post
%>
  '{
    "data": [
      {
        "type": "<%= res %>",
        "id": "<%= uuid_1 %>",
      }<% unless singular_req -%>, {
        "type": "<%= res %>",
        "id": "<%= uuid_2 %>",
      }<% end %>
    ]
  }' \
<%
when :get
when :patch
%>
  '{
    "data": [
      {
        "type": "<%= res %>",
        "id": "<%= uuid_1 %>",
      }<% unless singular_req -%>, {
        "type": "<%= res %>",
        "id": "<%= uuid_2 %>",
      }<% end %>
    ]
  }' \
<%
when :delete
%>
  '{
    "data": [
      {
        "type": "<%= res %>",
        "id": "<%= uuid_1 %>",
      }<% unless singular_req -%>, {
        "type": "<%= res %>",
        "id": "<%= uuid_2 %>",
      }<% end %>
    ]
  }' \
<%
end -%>
http://localhost:3081<%= ext %>
```
