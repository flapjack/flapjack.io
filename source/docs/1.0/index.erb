<% ['usage', 'gateway configuration', 'development'].each do |section| %>

  <%="<h4> #{section.capitalize} </h4>"%>

  <ul>
    <% section_dir = section.gsub(' ', '-') %>
    <% Dir[File.dirname(__FILE__) + "/#{section_dir}/*.md"].map {|f| File.basename(f, '.md')}.sort.each do |filename| %>
      <% pagename = filename.split(/-|_/).join(' ').capitalize %>
      <li><a href=<%="#{section_dir}/#{filename}"%>><%="#{pagename}"%></a></li>
    <% end %>
  </ul>

<% end %>
